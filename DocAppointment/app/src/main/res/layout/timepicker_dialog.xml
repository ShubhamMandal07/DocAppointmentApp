<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">


        <TextView
            android:id="@+id/morning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Morning"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/time10_1030"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:00am - 10:30am"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:backgroundTint="@color/doc"
                    android:layout_gravity="center"
                    />

                <Button
                    android:id="@+id/time1030_11"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:30am - 11:00am"
                    android:backgroundTint="@color/doc"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="10dp">

                <Button
                    android:id="@+id/time11_1130"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11:00am - 11:30am"
                    android:backgroundTint="@color/doc"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    />
                <Button
                    android:id="@+id/time1130_12"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11:30am - 12:00pm"
                    android:backgroundTint="@color/doc"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    />

            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/afternoon"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Afternoon"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/time3_330"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="03:00pm - 03:30pm"
                    android:backgroundTint="@color/doc"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    />

                <Button
                    android:id="@+id/time330_4"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="03:30pm - 04:00pm"
                    android:backgroundTint="@color/doc"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="10dp">

                <Button
                    android:id="@+id/time4_430"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="04:00pm - 04:30pm"
                    android:backgroundTint="@color/doc"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    />
                <Button
                    android:id="@+id/time430_5"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="04:30pm - 05:00pm"
                    android:backgroundTint="@color/doc"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    />

            </LinearLayout>

        </LinearLayout>






    </LinearLayout>


</androidx.cardview.widget.CardView>